import random

def spin_wheel():
    return random.randint(0, 36)

def payout(bet_number, winning_number, bet_amount):
    if bet_number == winning_number:
        return bet_amount * 35  # Standard 35:1 payout for single number
    else:
        return -bet_amount

def main():
    print("Welcome to Roulette!")
    
    balance = 1000  # Starting money

    while True:
        print(f"\nCurrent balance: ${balance}")
        try:
            bet_amount = int(input("Enter your bet amount (0 to quit): "))
        except ValueError:
            print("Invalid input. Please enter a number.")
            continue

        if bet_amount == 0:
            print("Thanks for playing!")
            break

        if bet_amount > balance:
            print("You don't have enough money to make that bet.")
            continue

        try:
            bet_number = int(input("Pick a number to bet on (0-36): "))
        except ValueError:
            print("Invalid number.")
            continue

        if bet_number < 0 or bet_number > 36:
            print("Please choose a number between 0 and 36.")
            continue

        print("Spinning the wheel...")
        winning_number = spin_wheel()
        print(f"The ball landed on {winning_number}.")

        winnings = payout(bet_number, winning_number, bet_amount)
        balance += winnings

        if winnings > 0:
            print(f"Congratulations! You won ${winnings}.")
        else:
            print(f"Sorry, you lost ${-winnings}.")

        if balance <= 0:
            print("You're out of money! Game over.")
            break

if __name__ == "__main__":
    main()
